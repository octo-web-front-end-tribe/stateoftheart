<div class="main container">
    <div class="row">
        <div class="col-md-3">
            <% include listProject %>
        </div>
        <div class="col-md-9">
            <h3><%= (typeof project === 'undefined' ? 'Ajouter projet' : 'Editer ' + project.name) %></h3>
            <% if (!added) { %>
            <form method="POST">
                <fieldset class="form-group">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" name="name" class="form-control" value="<%= (typeof project === 'undefined' ? '' : project.name) %>">
                    </div>

                    <div class="form-group">
                        <label>Context</label>
                        <textarea name="context" class="form-control"><%= (typeof project === 'undefined' ? '' : project.context) %></textarea>
                    </div>

                    <div class="form-group">
                        <label>Technos</label>
                        <textarea name="stacks" class="form-control" rows="3"><%= (typeof project === 'undefined' ? '' : project.stacks) %></textarea>
                    </div>
                    <div class="form-group">
                        <label>Participants</label>
                        <textarea name="participants" class="form-control" rows="3"><%= (typeof project === 'undefined' ? '' : project.participants) %></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Valider</button>
                </fieldset>
            </form>
            <% } else { %>
            <div class="alert alert-success" role="alert">Project has been validate!</div>
            <% } %>
        </div>

    </div>
</div>