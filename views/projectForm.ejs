<div class="main container">
    <div class="row">
        <div class="col-md-3">
            <% include listProject %>
        </div>
        <div class="col-md-9">
            <h3><%= (typeof project === 'undefined' ? 'Ajouter projet' : 'Editer ' + project.name) %></h3>
            <% if (!added) { %>
            <form method="POST">
                <fieldset class="form-group">
                    <div class="form-group">
                        <label>Nom</label>
                        <input type="text" name="name" class="form-control" value="<%= (typeof project === 'undefined' ? '' : project.name) %>" />
                    </div>

                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label>Date de d√©but</label>
                            <input type="text" id="startDate" name="startDate" class="form-control" value="<%= (typeof project === 'undefined' ? '' : project.startDate) %>" />
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Date de fin</label>
                            <input type="text" id="endDate" name="endDate" class="form-control" value="<%= (typeof project === 'undefined' ? '' : project.endDate) %>" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Contexte</label>
                        <textarea name="context" class="form-control"><%= (typeof project === 'undefined' ? '' : project.context) %></textarea>
                    </div>

                    <div class="form-group">
                        <label>Technos</label>
                        <textarea name="stacks" class="form-control" rows="3"><%= (typeof project === 'undefined' ? '' : project.stacks) %></textarea>
                    </div>
                    <div class="form-group">
                        <label>Participants</label>
                        <input type="text" name="participants" class="form-control" value="<%= (typeof project === 'undefined' ? '' : project.participants) %>" />
                    </div>
                    <button type="submit" class="btn btn-primary">Valider</button>
                </fieldset>
            </form>
            <% } else { %>
            <div class="alert alert-success" role="alert">Project has been successfully created !</div>
            <% } %>
        </div>

    </div>
</div>